# TicketSphere Server Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend URL (adjust for your domain)
FRONTEND_URL=http://localhost:5174

# JWT Configuration - IMPORTANT: Generate secure keys for production
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRE=30d

# Firebase Admin SDK Configuration
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=config/firebase-service-account.json

# Email Configuration (optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@domain.com
EMAIL_PASS=your_secure_app_password

# Payment Configuration (UPI for Indian payments)
UPI_ID=your_upi_id@bankname
MERCHANT_NAME=YourAppName

# CORS Configuration (optional)
CORS_ORIGIN=http://localhost:5174

# Rate Limiting (optional)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15
